#!/bin/bash
CONFIGURATION_PATHS="
.eslintrc.js
.gvimrc
"

SCRIPT_PATHS="
bleach
boot-windows
browse-photos
check-battery
check-ports.py
clip-file
disable-backlight
disable-wakeup
download-mp3
encrypt-password
prepare-playlist.py
rank-sizes
roll-dice*
sp
see-tree
set-brightness
sort-music.py
sort-music.sh
sort-photos.py
update-submodules
"

SCRIPTS_FOLDER=~/.scripts
if [ ! -e $SCRIPTS_FOLDER ]; then
    mkdir $SCRIPTS_FOLDER
fi

cd $(dirname "$0")

for X in $CONFIGURATION_PATHS; do
    cp $X ~
    echo 'cp '$X ~
done

for X in $SCRIPT_PATHS; do
    cp $X $SCRIPTS_FOLDER
    chmod a+x $SCRIPTS_FOLDER/$X
    echo 'cp '$X $SCRIPTS_FOLDER
done

if command -v dnf; then
    X=dnf
elif command -v apt; then
    X=apt
elif command -v brew; then
    X=brew
fi
command -v node || sudo $X install node -y
command -v npm || sudo $X install npm -y

source ~/.bashrc
v
pip install -U \
    ansible-lint \
    flake8 \
    pylama
npm install -g \
    bash-language-server \
    fixjson \
    htmlhint \
    markdownlint \
    stylelint stylelint-config-standard
command -v hadolint || sudo $X install hadolint -y
command -v yamllint || sudo $X install yamllint -y

mkdir -p ~/.config/bleachbit
cp bleachbit.ini ~/.config/bleachbit

command -v dconf && dconf load / < gnome.properties

echo ok
